<h1>Hello</h1>

<ul>
  <li><%= @spot.country %></li>
  <li><%= @spot.name %></li>
  <li><%= @spot.ideal_wind_direction %></li>
  <li><%= @spot.ideal_tide %></li>
  <li><%= @spot.description %></li>
  <li><%= @spot.ability_level %></li>
  <li><%= @spot.vibe %></li>
  <li><%= @spot.access %></li>
</ul>

<h3>Reviews:</h3>

<ul>
  <% @spot.reviews.each do |review| %>
    <li><%= review[:title] %></li>
    <%= link_to "Remove",
                  review_path(review),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
  <% end %>
</ul>
